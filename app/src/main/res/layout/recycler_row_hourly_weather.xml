<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="Hourly"
            type="com.uguraltintas.weatherapp.model.Hourly" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/twHour"
            unixSeconds="@{Hourly.dt}"
            timezone="@{Hourly.timezone}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/iwHourlyWeatherIcon"
            setImage="@{Hourly.weather[0].icon}"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/twHourlyTemperature"
            setTemperatureToInt="@{Hourly.temp}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
</layout>